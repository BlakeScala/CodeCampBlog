{{#if addNewPost}}
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>
    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>
    <div class="form-group">
      <label for="body">Body Content</label>
      {{textarea value=body id="body"}}
    </div>
    <button class="btn btn-default" {{action 'savePost'}}>Save Post</button>
  </form>
{{else}}
  <button class="btn btn-default" {{action 'postFormShow'}}>Add New Post</button>
{{/if}}
